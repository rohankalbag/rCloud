[Unit]
Description=Gunicorn instance to serve rcloud
After=network.target

[Service]
User=$USER
Group=www-data
WorkingDirectory=/home/$USER/Desktop/rCloud/backend
Environment="PATH=/home/$USER/Desktop/rCloud/backend/.venv/bin"
ExecStart=/home/$USER/Desktop/rCloud/backend/.venv/bin/gunicorn -w 4 --bind 0.0.0.0:3000 'main:app' 

[Install]
WantedBy=multi-user.target
